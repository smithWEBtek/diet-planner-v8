<div class="index_view">
  <h1>Welcome to DietPlanner!</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div class="col-sm-3">
        <ul id="celeb_list"></ul>
        <div id="show_celeb"></div>
        <%= form_for(@celeb, url: celebs_path, method: "POST") do |f| %>
          <%= f.label :add_celeb %><br>
          <%= f.text_field :name %><br>
        <%= f.submit %>
        <% end %>
      </div>

      <div class="col-sm-3">
        <ul id="food_list"></ul> 
        <%= form_for(@food, url: foods_path, method: "POST") do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name %><br>

          <%= f.label :group %><br>
          <%= f.collection_select :group_id, Group.all, :id, :name %><br>

          <%= f.label :calories %><br>
          <%= f.text_field :cals %><br>

        <%= f.submit %>
        <% end %>
      </div>

      <div class="col-sm-3">
        <ul id="diet_list"></ul> 
        <%= form_for(@diet, url: diets_path, method: "POST") do |f| %>
          <%= f.label :add_diet %><br>
          <%= f.text_field :name %><br>
        <%= f.submit %>
        <% end %>
      </div>

      <div class="col-sm-3">
        <ul id="phrase_list"></ul> 
        <%= form_for(@phrase, url: phrases_path, method: "POST") do |f| %>
          <%= f.label :add_phrase %><br>
          <%= f.text_field :content %><br>
        <%= f.submit %>
        <% end %>
      </div>

    </div>
  </div>
</div>
<hr>
<h4>Group/Foods: has_many relationship in information rendered via JSON and appended to the DOM</h4>
<div class="indexes">
  <div class="col-lg-12">
    <% @groups.each do |group| %>
      <%= link_to group.name, group_path(group) %><br>  
    <% end %>
  </div>
</div>
<hr>
<h4>Index resources rendered using jQuery and Active Model Serialization JSON backend</h4>
<div class="indexes">
  <button>Celebs</button>
    <div id="index_celebs"></div>
  <button>Foods</button>
    <div id="index_foods"></div>
  <button>Diets</button>
    <div id="index_diets"></div>
  <button>Phrases</button>
    <div id="index_phrases"></div>
</div>

</div>
<div class="registration_bar">
<h3>Celebrity Quotes</h3>
<p>
  <button id="new_quote"><%= link_to "New Quote", new_quote_path %></button>
  <span id="new_quote"></span>
  
  <button id="generate_random_quotes"><%= link_to "Generate 5 Random Quotes", random_quotes_path %></button>
  <span id="quotes"></span>
  
  <button id=clear_quotes><%= link_to "Clear", clear_quotes_path %></button>  
  
  <button id="download_csv"><%= link_to "CSV Export Quotes", export_quotes_csv_path %></button>
  <span id="show_csv"></span>
</p>
<div id="celebrity_quotes"></div>
  <%= render partial: 'quotes/quotes', locals: { quotes: @quotes } %>
Quote Index
<div class='index_view'>
  <table>
    <tr align="left">
      <th>Edit</th>
      <th>Delete</th>
      <th>ID</th>
      <th>Celeb</th>
      <th>Verb</th>
      <th>Adj</th>
      <th>Food</th>
      <th>Phrase</th>
      <th>Diet</th>
    </tr>
    <% @quotes.each do |quote| %>
    <tr>
      <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
      <td><%= link_to 'Delete', quote_path(quote), :method => :delete, :confirm => 'Are you sure?' %></td>
      <td><%= quote.id %></td>
      <td><%= quote.celeb.name %></td>
      <td><%= quote.verb.name %></td>
      <td><%= quote.adj.name %></td>
      <td><%= quote.food.name %></td>
      <td><%= quote.phrase.content %></td>
      <td><%= link_to quote.diet.name, diet_path(quote.diet) %></td>
    </tr>
    <% end %>
  </table>
</div>
