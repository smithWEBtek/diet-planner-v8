				<p><%= link_to "New Diet", new_diet_path %></p>
			<% end %>
			<%= render partial: 'diets/diets', locals: { diets: @diets } %>
		</div>

		<div class="col-sm-3">
			<div id="diet_index_show"></div>
		</div>

		<div class="col-sm-6">
			<%= render partial: 'diets/dietstats' %>
		</div>
	</div>
</div>
